@model OrderViewModel
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">ویرایش سفازش</h2>
<br />
<div class="border container" style="padding:30px">
    <partial name="_Messages" />
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Titel"></label>
            </div>
            <div class="col-6">
                <input asp-for="Titel" class="form-control" />
                <span asp-validation-for="Titel" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ProductId"></label>
            </div>
            <div class="col-6">
                <select asp-for="ProductId" asp-items="ViewBag.Products"></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <input type="submit" value="ذخیره" class="btn btn-primary form-control" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}