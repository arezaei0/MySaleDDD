@model ResetPasswordViewModel
@{

    Layout = null;
}

    <!DOCTYPE html>
    <html dir="rtl" lang="fa">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">

        <title>بازیابی کلمه عبور </title>
        <link href="~/lib/bootstrap4/dist/css/bootstrap.css" rel="stylesheet" />
        <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
        <link href="~/css/login.css" asp-append-version="true" rel="stylesheet" />
        <script src="~/lib/jquery2/dist/jquery.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    </head>
    <body>
        <section class="login-block">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 login-sec">
                        <div class="text-center">
                            <img src="/img/brand.png" width="250" />
                        </div>

                        <form class="login-form" id="loginForm" asp-antiforgery="true" method="post">
                            <div asp-validation-summary="ModelOnly"></div>
                            @Html.HiddenFor(x=>x.UserId)
                            <div class="form-group">
                                <label for="Code" class="text-uppercase">کد دریافتی</label>

                                <input asp-for="Code" type="text" class="form-control" placeholder="کد دریافتی" />
                                <span asp-validation-for="Code"></span>

                            </div>
                            <div>
                                <label for="NewPassword" class="text-uppercase">رمز عبور</label>
                                <input asp-for="NewPassword" class="form-control" placeholder="رمز عبور" />
                                <span asp-validation-for="NewPassword"></span>
                            </div>
                            <br />
                            <div class="form-check">
                                <button type="submit" class="btn btn-login float-right">ثبت رمز جدید</button>
                            </div>

                        </form>

                    </div>
                    <div class="col-md-8 banner-sec">
                        <div class="app-name">
                        </div>
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

                            <div class="carousel-inner" role="listbox">
                                <div class="carousel-item active">
                                    <img class="d-block img-fluid" style="width:100%" src="/img/slide-item-1.png" alt="سامانه رایاپرداز">
                                    <div class="carousel-caption d-none d-md-block">

                                        <div class="banner-text">
                                            <h2>شرکت سرمایه گذاری تامین اجتماعی</h2>
                                            <p>معاونت امور هلدینگ ها</p>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


    </body>
</html>