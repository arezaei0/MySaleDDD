@model IEnumerable<UserViewModel>

@{
    var entity = Url.ActionContext.RouteData.Values["controller"].ToString();
}

<br />
<div class="container row p-0 m-0">
    <div class="border backgroundWhite">
        <div class="row">
            <div class="col-6">
                <h2 class="text-info">لیست کاربران</h2>
            </div>

            <div class="col-6 text-right">
                <a asp-controller="@entity" asp-action="Create" class="btn btn-info form-control text-white">کاربر جدید</a>
            </div>
        </div>
        <br />
        <div>
            <form method="post">
                @if (Model.Count() > 0)
                {
                    <table class="table table-striped border">
                        <tr class="table-secondary">
                            <th>
                                @Html.DisplayNameFor(m => m.UserName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(m => m.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(m => m.LastName)
                            </th>
                            <th></th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(m => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.LastName)
                                </td>
                                <td>
                                    <button asp-controller="Brand" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('آیا مطمئن هستید؟')" class="btn btn-danger btn-sm">حذف</button>

                                    <a asp-controller="@entity" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">ویرایش</a>
                                </td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <p>کاربری یافت نشد</p>
                }
            </form>

        </div>
    </div>
</div>