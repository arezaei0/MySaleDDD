@model UserViewModel
@{
    ViewData["Title"] = "Edit";

}

<br />
<h2 class="text-info">ویرایش کاربر</h2>
<br />

<div class="border container" style="padding:30px">
    <partial name="_Messages" />
    <form method="post" asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="border backgroundWhite">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="UserName" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="UserName" class="form-control" />
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>


            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="FirstName" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="FirstName" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="LastName" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="LastName" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Email" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Email" class="form-control" />
                </div>
            </div>


            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Mobile" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Mobile" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="PhoneNumber" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Password" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Password" class="form-control" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>


            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ConfirmPassword" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="ConfirmPassword" class="form-control" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="RoleType" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <select asp-for="RoleType" asp-items="Html.GetEnumSelectList(typeof(RoleType))"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Claims" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <select multiple asp-for="Claims" asp-items="(ViewBag.Claims as List<KeyValueViewModel>).Select(x => new SelectListItem { Text = x.Value, Value = x.Key}).AsEnumerable()"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3 offset-3">
                    <input type="submit" value="ذخیره" class="btn btn-primary form-control" />
                </div>
                <div class="col-3 offset-3">
                    <a asp-action="Index" class="btn btn-success">بازگشت</a>
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
