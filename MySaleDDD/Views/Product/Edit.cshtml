@model ProductViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">ویرایش محصول</h2>
<br />

<div class="border container" style="padding:30px">
    <partial name="_Messages" />
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="row col-6 border">
            @{ 
                var base64 = Convert.ToBase64String(Model.ProductImage);
                var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                <img src="@imgsrc" height="100%" width="100%" />
            }
        </div>
        <div class="border backgroundWhite">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Titel" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Titel" class="form-control" />
                </div>
                <span asp-validation-for="Titel" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="UnitId" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <select asp-for="UnitId" asp-items="ViewBag.Units"></select>
                </div>

            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="BrandId" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <select asp-for="BrandId" asp-items="ViewBag.Brands"></select>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ProductCode" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="ProductCode" class="form-control" />
                </div>

            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Qty" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Qty" class="form-control" />
                </div>

            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ByePrice" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="ByePrice" type="text" class="form-control" />
                </div>

            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="SellPrice" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="SellPrice" type="text" class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label class="col-form-label">تصویر</label>
                </div>
                <div class="col-5">
                    <input asp-for="MyFile" type="file" id="MyFile" name="MyFile" class="form-control" />
                </div>

            </div>

            <div class="form-group row">
                <div class="col-3 offset-3">
                    <input type="submit" value="ذخیره" class="btn btn-primary form-control" />
                </div>
                <div class="col-3 offset-3">
                    <a asp-action="Index" class="btn btn-success">بازگشت</a>
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}