@model IEnumerable<BaseViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/shared/_Layout.cshtml";

    var entity = Url.ActionContext.RouteData.Values["controller"].ToString();
}

<br />
<br />
<div class="container" style="padding:30px">
    <div class="border backgroundWhite">
        <div class="row">
            <div class="col-6">
                <h2 class="text-info">لیست برند ها</h2>
            </div>

            <div class="col-6 text-right">
                <a asp-controller="@entity" asp-action="Create" class="btn btn-info form-control text-white">برند جدید</a>
            </div>
        </div>
        <br />
        <div>
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(m => m.Titel)
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Titel)
                            </td>
                            <td>
                                <button asp-controller="Brand" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('آیا مطمئن هستید؟')" class="btn btn-danger btn-sm">حذف</button>

                                <a asp-controller="@entity" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">ویرایش</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>برندی یافت نشد</p>
            }
        </div>
    </div>
</div>

