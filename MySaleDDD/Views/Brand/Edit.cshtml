@model BaseViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">ویرایش برند</h2>
<br />

<div class="border container" style="padding:30px">
   
    <form method="post" asp-action="Edit">

        <div class="border backgroundWhite">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Titel" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Titel" class="form-control" />
                </div>
                <span asp-validation-for="Titel" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-3 offset-3">
                    <input type="submit" value="ذخیره" class="btn btn-primary form-control" />
                </div>
                <div class="col-3 offset-3">
                    <a asp-action="Index" class="btn btn-success">بازگشت</a>
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}